{% extends 'base.html.twig' %}

{% block title %}List of Users{% endblock %}

{% block body %}

<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Add User</h1>
    {% if errorsString is defined %}
        <ul>
        {% for error in errorsString%}
            <li>{{error}}</li>
        {% endfor %}
        </ul>
    {% endif %}
    <form class="ui form" action="{{path('insertUser')}}" method="post">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate_add_user') }}" >
        <div class="field">
            <label>Username:</label>
            <input type="text" name="username">
        </div>

        <div class="field">
            <label>Email</label>
            <input type="email" name="email">
        </div>

        <div class="field">
            <label>Password</label>
            <input type="password" name="password">
        </div>

        <div class="field">
            <label>Confirm Password</label>
            <input type="password" name="confirm_password">
        </div>

        <button class="ui button" type="submit">Add</button>

    </form>
</div>

{% endblock %}